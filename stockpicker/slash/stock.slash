var prices = [-1, 3, -9, 2, 2, -1, 2, -1]
var buy = 0
var sell = 0
var best = -1

# naive quadratic solution
var i = 0
loop $i < $prices.len() {
    var stonk = 0
    var j = $i

    loop $j < $prices.len() {
         $stonk += $prices[$j]
         if $stonk > $best {
             $best = $stonk
             $buy = $i
             $sell = $j
         }
         $j += 1
    }

    $i += 1
}

$sell += 1

printf "kj√∏psdag: %.0f, salgsdag: %.0f, profit: %0.f\n" $buy $sell $best
